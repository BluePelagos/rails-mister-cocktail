<div class ="container">
<h1>Add doses for Cocktail</h1>
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <% if @dose.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @dose.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit "Add recipe", class: "btn btn-primary" %>
<% end %>
  <hr>
  <%= link_to 'Back to list', cocktails_path %>
</div>

