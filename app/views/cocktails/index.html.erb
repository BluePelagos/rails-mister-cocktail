
<div class="container">
 <h1>All Cocktails</h1>
 <table class="table table table-hover">
   <thead class="thead-light">
     <tr>
       <th scope="col">Name</th>
       <th scope="col">Recipe</th>
     </tr>
   </thead>
   <tbody>
     <% @cocktails.each do |cocktail| %>
       <tr scope='row'>
         <td><%= cocktail.name %></td>
         <td><%= link_to 'Show', cocktail %></td>
       </tr>
     <% end %>
   </tbody>
 </table>
 <br>
 <hr>
 <%= link_to '+ Add a cocktail', new_cocktail_path %>
</div>
