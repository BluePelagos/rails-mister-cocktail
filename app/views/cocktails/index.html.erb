      <div class="cards">
        <% @cocktails.each do |cocktail| %>
            <div class="card-category">
                <div class="inner-card">
                  <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
                  <!-- <p><%= link_to 'Show', cocktail_path(cocktail), :class => "btn btn-primary" %></p> -->
                </div>
            </div>
        <% end %>
      </div>
