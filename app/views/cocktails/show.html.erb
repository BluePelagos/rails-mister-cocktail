
<div class="container">
  <h1>Cocktail</h1>
  <hr>
  <h4><%= @cocktail.name %></h4>
  <div class="card-show">
    <%= image_tag("cocktail.jpg") %>
    <div class="container">
      <div class="row">

        <div class="col-sm">
          <div class="ingredient-list">
            <h6>Ingredient List:</h6>
            <% @cocktail.doses.each do |dose| %>
              <li><%= dose.description %> | <%= dose.ingredient.name %><%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash" aria-hidden="true"></i>
                <% end %>
              </li>
            <% end %>
          </div>
        </div>

        <div class="col-sm">
          <%= render "doses/new" %>
        </div>
      </div>

    </div>
    </p><%= link_to 'Back to list', root_path %></p>
  </div>
</div>
